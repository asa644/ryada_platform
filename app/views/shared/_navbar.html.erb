                    </ul>
                </nav>
                <div class="clearfix"></div>
                <!-- Main Navigation / End -->

            </div>
            <!-- Left Side Content / End -->
            <!-- Right Side Content / End -->
            <div class="right-side">
                <div class="header-widget">
                <% if !user_signed_in? %>
                    <a href="#sign-in-dialog" class="sign-in popup-with-zoom-anim"><i class="sl sl-icon-login"></i> Sign In</a>
                <%else%>
                    <div class="user-menu">

                        <div class="user-name"><span>
                            <%= cl_image_tag current_user.photo,:width => 35, :height => 35, :crop => :fill%>

                            </span>
                            <%=current_user.first_name%>
                        </div>
                        <ul>
                            <li>
                                <%=link_to edit_user_registration_url do%>
                                    <i class="sl sl-icon-user"></i> My Profile
                                <%end%>
                            </li>
                            <li>
                                <%= link_to destroy_user_session_path, method: :delete do %>
                                    <i class="sl sl-icon-power"></i>  <%= t(".sign_out", default: "Log out") %>
                                <% end %>
                            </li>
                        </ul>
                    </div>


                <%end%>
                <%= link_to new_listing_url, class: "button border with-icon", data:{turbolinks: false} do %>
                        Add Listing <i class="sl sl-icon-plus"></i>
                    <%end%>
                </div>
            </div>
            <!-- Right Side Content / End -->

        </div>
    </div>
    <!-- Header / End -->

</header>
<div class="clearfix"></div>
