        <!-- Header -->

        <div id="header" class="not-sticky">
<%end%>
        <div class="container">

            <!-- Left Side Content -->
            <div class="left-side">

                <!-- Logo -->
                <div id="logo">
                    <%= link_to root_path, data:{turbolinks: false} do%>
                        <%= image_tag "logo.png"%>
                    <%end%>
                </div>

                <!-- Mobile Navigation -->
                <div class="menu-responsive">
                    <i class="fa fa-reorder menu-trigger"></i>
                </div>

                <!-- Main Navigation -->
                <nav id="navigation" class="style-1">
                    <ul id="responsive">

                        <li>
                        <%=link_to root_path, data:{turbolinks: false} do%>
                            Home
                        <%end%>

                        </li>
                        <li>
                        <%=link_to workouts_path, data:{turbolinks: false} do%>
                            Fitness classes
                        <%end%>
                        </li>
