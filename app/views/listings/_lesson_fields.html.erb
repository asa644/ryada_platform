<tr class="pricing-list-item pattern">
<td>

     <div class="fm-move"><i class="sl sl-icon-cursor-move"></i></div>
    <div class="fm-input pricing-name">
    <%= f.input_field :name, placeholder: "Name" %>
    </div>
      <div class="fm-input pricing-name">
          <%= f.select :category_ids, Category.all.map { |r| [r.name, r.id, { class: r.id }] } %>
    </div>
    <div class="fm-input pricing-ingredients">
    <%= f.input_field :description, placeholder: "Description" %>
    </div>
    <div class="fm-input pricing-ingredients">
  <%= f.schedule_select :schedule, style: :bootstrap, until: true, input_types: {date: :date_picker, time: :time_picker, datetime: :datetime_picker} %>
   </div>
</td>
</tr>
