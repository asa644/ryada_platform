<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>City</th>
      <th>Street</th>
      <th>Landmark</th>
      <th>Phonenumber</th>
      <th>Longtitude</th>
      <th>Latitude</th>
      <th>User</th>
      <th>Listing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= lesson.description %></td>
        <td><%= lesson.city %></td>
        <td><%= lesson.street %></td>
        <td><%= lesson.landmark %></td>
        <td><%= lesson.phonenumber %></td>
        <td><%= lesson.longtitude %></td>
        <td><%= lesson.latitude %></td>
        <td><%= lesson.user %></td>
        <td><%= lesson.listing %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
